<Window x:Class="HealthCareApp.Views.SymtompCheckerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HealthCareApp.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:components="clr-namespace:HealthCareApp.Components"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
     TextElement.FontWeight="Regular"
     TextElement.FontSize="13"
     TextOptions.TextFormattingMode="Ideal"
     TextOptions.TextRenderingMode="Auto"
     Background="{DynamicResource MaterialDesignPaper}"
     FontFamily="{DynamicResource MaterialDesignFont}"
             DataContext="{StaticResource SymptomVM}"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="1200">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <materialDesign:Card Grid.Column="1" x:Name="SymptomsCard" Width="400" Height="500">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="3*"></RowDefinition>
                </Grid.RowDefinitions>
                <Border x:Name="BDroundSymptomBox" 
                        BorderBrush="Black" 
                        BorderThickness="1" 
                        CornerRadius="15" 
                        Width="350" Height="150"
                        VerticalAlignment="Center">
                    <TextBox x:Name="SymptomsBox" 
                             Margin="5"
                             BorderThickness="0"
                             BorderBrush="White"
                             Text=""
                             TextWrapping="Wrap"></TextBox>
                </Border>
                <TextBlock Grid.Row="0" 
                           Text="Symptoms" 
                           VerticalAlignment="Top" 
                           HorizontalAlignment="Left" 
                           FontSize="20"
                           FontWeight="Bold" Margin="22,0,0,0"></TextBlock>
                <TextBlock Text="Symptoms List"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Grid.Row="1"
                           FontWeight="Bold"
                           FontSize="20" Margin="26,0,0,0"></TextBlock>
                <Button
                    Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                      Width="150"
                      Content="Dianosis"
                      IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                      Style="{StaticResource MaterialDesignRaisedButton}"
                      ToolTip="Resource name: MaterialDesignRaisedButton" Margin="222,0,0,0" />
                <ComboBox
                      Grid.Row="2"
                      x:Name="ComboBoxSymptoms"
                      Width="350"
                      materialDesign:HintAssist.Hint="You are allowed to chose more than one symptom"
                      materialDesign:TextFieldAssist.HasClearButton="True"
                      IsEditable="True"
             
                      ItemsSource="{Binding Items}"
                      Style="{StaticResource MaterialDesignFilledComboBox}" Margin="25,7,25,152"
                      />

            </Grid>
        </materialDesign:Card>
        <materialDesign:Card Grid.Column="2" x:Name="ResultCard" Width="400" Height="500">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="6*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="2*"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Text="Result"
                           FontSize="20"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Grid.Row="0"
                           HorizontalAlignment="Center"></TextBlock>
                <Border x:Name="BDroundResult"
                        BorderBrush="Black"
                        BorderThickness="1"
                        CornerRadius="15"
                        Width="350"
                        Height="280"
                        Grid.Row="1">
                    <TextBlock x:Name="ResultBlock"></TextBlock>
                </Border>
                <TextBlock Text="Advice"
                           FontSize="20"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Grid.Row="2"></TextBlock>
                <Border x:Name="BDroundAdvice"
                        Grid.Row="3"
                        Width="350"
                        Height="80"
                        BorderThickness="1"
                        BorderBrush="Black"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        CornerRadius="15">
                    <TextBlock x:Name="AdviceBlock"></TextBlock>
                </Border>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>
